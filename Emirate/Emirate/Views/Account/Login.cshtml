@model Emirate.ViewModels.LoginViewModel
@{
	ViewData["Title"] = "Login"; 
	Layout = "~/Views/Shared/_AccountLayout.cshtml";


}

<div class="container mx-auto" style="width:50%">

	<h1 class="mt-3">LOGIN</h1>

	<form method="post" asp-action="login" asp-controller="Account">

		<span class="text-danger font-weight-bold"> @ViewBag.Message </span>
		<div class="form-group">
			<label >Username:</label>
			<input type="email" asp-for="Email" class="form-control" placeholder="email" required>
		</div>
		<div class="form-group">
			<label for="id_password">Password:</label>
			<input type="password" asp-for="Password" class="form-control" placeholder="Password"  required>
		</div>

		<div class="form-group form-check">
			<label style="">
				<input class="form-check-input" type="checkbox" asp-for="RememberMe" required>
				Remember me
			</label><br>
			<a style="margin-left:30px;float:right;" class="reset-link text-primary" href="#">Forgot password?</a>
		</div>

		<div class="w-25">
			<button style="" class="btn btn-success form-control" type="submit">Login</button>
		</div>
		
	</form>
</div>


