@model Emirate.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "AdminDashBoard";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<!-- Page Wrapper -->
<div class="container-fluid page-wrapper">

    <!-- Page Content -->
    <div class="content" style="margin-top: -89px;">

        <!-- Page Header -->
        <div class="page-header col-lg-12">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title">Welcome Admin!</h3>
                   
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item active">Admin Dashboard</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
        <!-- /Page Header -->
        
    @if (Model != null)
    {
        <div class="row m-1" id="admindsb-row-1">
