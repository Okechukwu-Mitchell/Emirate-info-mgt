<body>
    <header>
        <nav class=" nav navbar navbar-expand-sm navbar-dark">
            <a class="navbar-brand ml-2" asp-controller="Home" asp-action="Index">
                <img src="/images/euclogo1copy.png" alt="logo" width="70" >
            </a>

            <ul class="navbar-nav me-auto text-dark">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Welcome</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="AdminDashboard" asp-controller="Admin">Dashboard</a>
                    </li>
                }
                else if(User.IsInRole("User"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("UserDashBoard", "User")">Dashboard</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                }
                
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                </li>
                }

                    
