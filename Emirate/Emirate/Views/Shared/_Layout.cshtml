                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Emirate" asp-action="Research">Research</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Emirate" asp-action="Library">Library</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Emirate" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Emirate" asp-action="Services">Services</a>
                        </li>
                    </ul>
                    </div>
                </div>
        </nav>
  
