@model IEnumerable<Emirate.ViewModels.StudentCourseViewModel>
@{
    ViewData["Title"] = "MyCoursesReg";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    var user = Model.FirstOrDefault()?.StudentFullName;
}


<style>
    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>


<div class="container col-lg-12 col-md-12 col-sm-12 my-4">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">My Courses </h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Dashboard</a></li>
                    <li class="breadcrumb-item active">My registered Courses</li>
                </ul>
            </div>
        </div>
    </div>


    

    <p>Student Name: <b> @user</b></p>


    <h4>Courses:</h4>

    <div class="col-lg-12">
        <table class="table display table-bordered table-striped table-hover" id="myTable" style="width:100%">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Course Name</th>
                    <th>Course Unit</th>
                

                </tr>
            </thead>
            @if (Model != null && Model.Count() > 0)
            {

                <tbody>
                    @foreach (var course in Model)
                    {

                        <tr>
                            <td></td>
                            <td>@course.Name</td>
                            <td>@course.CourseUnit</td>
                        

                        </tr>


                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2"></th>
                        <th>Total Course Units: <span id="totalCourseUnits">0</span></th>
                    </tr>
                </tfoot>
           
            }

        </table>
       
    </div>
</div>







<script>
    document.addEventListener("DOMContentLoaded", function() {
        calculateTotals();
    });

    function calculateTotals() {
        var table = document.getElementById("myTable");
        var rows = table.getElementsByTagName("tbody")[0].getElementsByTagName("tr");
        var totalCourseUnits = 0;

        for (var i = 0; i < rows.length; i++) {
            var courseUnitCell = rows[i].getElementsByTagName("td")[2];
            var courseUnit = parseInt(courseUnitCell.textContent);

            if (!isNaN(courseUnit)) {
                totalCourseUnits += courseUnit;
            }
        }

        document.getElementById("totalCourseUnits").textContent = totalCourseUnits;
    }
</script>





